#include/etc/inputrc
"\e[A":history-search-backward
"\e[B":history-search-forward

setshow-all-if-ambiguous on
setvisible-stats on
setmatch-hidden-files on
#setexpand-tilde on
setmark-directories on
setcompletion-query-items 200
setbell-style none

setinput-meta on
setoutput-meta on

$if Bash
  Space: magic-space
$endif

"\C-x\C-o":menu-complete
"\C-x\C-f":complete-filename
"\C-x\C-u":complete-username
"\C-x\C-h":complete-hostname

setbind-tty-special-chars off
"\C-w":unix-filename-rubout

#mappings for Ctrl-left-arrow and Ctrl-right-arrow for word moving
"\e[1;5C":forward-word
"\e[1;5D":backward-word
"\e[5C":forward-word
"\e[5D":backward-word
"\e\e[C":forward-word
"\e\e[D":backward-word

#Misc home/end junk
"\e[1~":beginning-of-line
"\e[4~":end-of-line
"\e[3~":delete-char
"\e[2~":quoted-insert
"\e[8~":end-of-line
"\eOc":forward-word
"\eOd":backward-word
"\eOH":beginning-of-line
"\eOF":end-of-line
"\e[H":beginning-of-line
"\e[F":end-of-line
