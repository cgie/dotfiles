#!/bin/sh

$HOME/bin/wacom-right # initialize the tablet on the right screen

xsetwacom --set "Wacom Intuos PT S Pad pad" Button 1 "key +ctrl z -ctrl"
xsetwacom --set "Wacom Intuos PT S Pad pad" Button 8 "key +ctrl +plus -plus -ctrl"
xsetwacom --set "Wacom Intuos PT S Pad pad" Button 9 "key +ctrl +minus -minus -ctrl"
xsetwacom --set "Wacom Intuos PT S Pad pad" Button 3 "key +ctrl +y -y -ctrl"

# stylus

xsetwacom set "Wacom Intuos PT S Pen stylus" "Area" "0 0 14720 9200"
xsetwacom set "Wacom Intuos PT S Pen stylus" "TabletDebugLevel" "0"
xsetwacom set "Wacom Intuos PT S Pen stylus" "Suppress" "4"
xsetwacom set "Wacom Intuos PT S Pen stylus" "RawSample" "2"
xsetwacom set "Wacom Intuos PT S Pen stylus" "PressureCurve" "0 0 100 100"
xsetwacom set "Wacom Intuos PT S Pen stylus" "Mode" "Absolute"
xsetwacom set "Wacom Intuos PT S Pen stylus" "TabletPCButton" "on"
xsetwacom set "Wacom Intuos PT S Pen stylus" "Touch" "off"
xsetwacom set "Wacom Intuos PT S Pen stylus" "Gesture" "off"
xsetwacom set "Wacom Intuos PT S Pen stylus" "ZoomDistance" "0"
xsetwacom set "Wacom Intuos PT S Pen stylus" "ScrollDistance" "0"
xsetwacom set "Wacom Intuos PT S Pen stylus" "TapTime" "250"
xsetwacom set "Wacom Intuos PT S Pen stylus" "Rotate" "none"
xsetwacom set "Wacom Intuos PT S Pen stylus" "Threshold" "27"
xsetwacom set "Wacom Intuos PT S Pen stylus" "BindToSerial" "0"

# eraser

xsetwacom set "Wacom Intuos PT S Pen eraser" "Area" "0 0 14720 9200"
xsetwacom set "Wacom Intuos PT S Pen eraser" "TabletDebugLevel" "0"
xsetwacom set "Wacom Intuos PT S Pen eraser" "Suppress" "4"
xsetwacom set "Wacom Intuos PT S Pen eraser" "RawSample" "2"
xsetwacom set "Wacom Intuos PT S Pen eraser" "PressureCurve" "5 10 90 95"
xsetwacom set "Wacom Intuos PT S Pen eraser" "Mode" "Absolute"
xsetwacom set "Wacom Intuos PT S Pen eraser" "Touch" "off"
xsetwacom set "Wacom Intuos PT S Pen eraser" "Gesture" "off"
xsetwacom set "Wacom Intuos PT S Pen eraser" "ZoomDistance" "0"
xsetwacom set "Wacom Intuos PT S Pen eraser" "ScrollDistance" "0"
xsetwacom set "Wacom Intuos PT S Pen eraser" "TapTime" "250"
xsetwacom set "Wacom Intuos PT S Pen eraser" "Rotate" "none"
xsetwacom set "Wacom Intuos PT S Pen eraser" "Threshold" "27"
xsetwacom set "Wacom Intuos PT S Pen eraser" "BindToSerial" "0"

# touch

xsetwacom set "Wacom Intuos PT S Finger touch" "Area" "0 0 4096 4096"
xsetwacom set "Wacom Intuos PT S Finger touch" "TabletDebugLevel" "0"
xsetwacom set "Wacom Intuos PT S Finger touch" "Suppress" "4"
xsetwacom set "Wacom Intuos PT S Finger touch" "RawSample" "2"
xsetwacom set "Wacom Intuos PT S Finger touch" "PressureCurve" "0 0 100 100"
xsetwacom set "Wacom Intuos PT S Finger touch" "Mode" "Relative"
xsetwacom set "Wacom Intuos PT S Finger touch" "Touch" "off"
xsetwacom set "Wacom Intuos PT S Finger touch" "Gesture" "off"
xsetwacom set "Wacom Intuos PT S Finger touch" "ZoomDistance" "50"
xsetwacom set "Wacom Intuos PT S Finger touch" "ScrollDistance" "20"
xsetwacom set "Wacom Intuos PT S Finger touch" "TapTime" "250"
xsetwacom set "Wacom Intuos PT S Finger touch" "Rotate" "none"
xsetwacom set "Wacom Intuos PT S Finger touch" "Threshold" "27"
xsetwacom set "Wacom Intuos PT S Finger touch" "BindToSerial" "0"

# pad
xsetwacom set "Wacom Intuos PT S Finger pad" "TabletDebugLevel" "0"
xsetwacom set "Wacom Intuos PT S Finger pad" "Suppress" "2"
xsetwacom set "Wacom Intuos PT S Finger pad" "RawSample" "4"
xsetwacom set "Wacom Intuos PT S Finger pad" "Mode" "Absolute"
xsetwacom set "Wacom Intuos PT S Finger pad" "Touch" "on"
xsetwacom set "Wacom Intuos PT S Finger pad" "Gesture" "off"
xsetwacom set "Wacom Intuos PT S Finger pad" "ZoomDistance" "180"
xsetwacom set "Wacom Intuos PT S Finger pad" "ScrollDistance" "18"
xsetwacom set "Wacom Intuos PT S Finger pad" "TapTime" "220"
xsetwacom set "Wacom Intuos PT S Finger pad" "RelWheelUp" "button +5 "
xsetwacom set "Wacom Intuos PT S Finger pad" "RelWheelDown" "+4 "
xsetwacom set "Wacom Intuos PT S Finger pad" "AbsWheelUp" "+4 "
xsetwacom set "Wacom Intuos PT S Finger pad" "AbsWheelDown" "+5 "
xsetwacom set "Wacom Intuos PT S Finger pad" "AbsWheel2Up" "+4 "
xsetwacom set "Wacom Intuos PT S Finger pad" "AbsWheel2Down" "+5 "
xsetwacom set "Wacom Intuos PT S Finger pad" "StripLeftUp" "+4 "
xsetwacom set "Wacom Intuos PT S Finger pad" "StripLeftDown" "+5 "
xsetwacom set "Wacom Intuos PT S Finger pad" "StripRightUp" "+4 "
xsetwacom set "Wacom Intuos PT S Finger pad" "StripRightDown" "+5 "
xsetwacom set "Wacom Intuos PT S Finger pad" "Threshold" "0"
xsetwacom set "Wacom Intuos PT S Finger pad" "BindToSerial" "0"
