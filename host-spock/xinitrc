#!/bin/sh

# US keyboard layout
setxkbmap -layout "de" -variant "nodeadkeys" -option "ctrl:nocaps"

# dual monitor setup, generated by arandr
/home/cgie/.screenlayout/dualdigitalportrait.sh
#/home/cgie/.screenlayout/dualdigital.sh


xsetroot -cursor_name left_ptr
xset r rate 300 75
xset -b

xrdb -load .Xdefaults

# $HOME/.gem/ruby/2.0.0/gems/gollum-2.5.2/bin/gollum /repos/labnotes &

# Wacom Bamboo Pen & Touch configuration
sleep 30 & /home/cgie/wacom-init

# Sync clipboards
autocutsel -fork &
autocutsel -selection PRIMARY -fork &

# Auto-start applications
trayer --edge top --align right --widthtype request --expand true --SetDockType true --SetPartialStrut true --transparent true --alpha 0 --tint 0xfdf6e3 --expand true --heighttype pixel --height 14  --padding 0 --monitor 1 &
nitrogen --restore &
pcmanfm -d &
xcompmgr &
sleep 120 && dropboxd &

exec xmonad
